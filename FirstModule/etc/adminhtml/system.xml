<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
        <system>
            <tab id="Amasty_FirstModule" translate="label" sortOrder="10">
                <label>Amasty First Module</label>
            </tab>
            <section id="first_config" translate="label" sortOrder="2" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>First Module Config</label>
                <tab>Amasty_FirstModule</tab>
                <resource>Amasty_FirstModule::config</resource>
                <group id="general" translate="label" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>General Configuration</label>
                    <field id="enabled" type="select" showInDefault="1" showInWebsite="0" showInStore="0">
                        <label>Is Module Enabled</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    </field>
                    <field id="greeting_text" type="textarea" showInDefault="1" showInWebsite="0" showInStore="0">
                        <label>Greeting text</label>
                        <validate>required-entry</validate>
                        <depends>
                            <field id="enabled">1</field>
                        </depends>
                    </field>
                    <field id="show_qty" type="select" showInDefault="1" showInWebsite="0" showInStore="0">
                        <label>Show qty</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                        <depends>
                            <field id="enabled">1</field>
                        </depends>
                    </field>
                    <field id="default_qty" translate="label" type="text" sortOrder="4" showInDefault="1" showInWebsite="0" showInStore="0">
                        <label>Default qty</label>
                        <validate>validate-number</validate>
                        <depends>
                            <field id="enabled">1</field>
                            <field id="show_qty">1</field>
                        </depends>
                    </field>
                </group>
            </section>
        </system>
</config>
