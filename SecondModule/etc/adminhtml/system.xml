<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
        <system>
            <tab id="Amasty_SecondModule" translate="label" sortOrder="11">
                <label>Amasty Second Module</label>
            </tab>
            <section id="second_config" translate="label" sortOrder="2" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Second Module Config</label>
                <tab>Amasty_SecondModule</tab>
                <resource>Amasty_SecondModule::config</resource>
                <group id="general" translate="label" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>General Configuration</label>
                    <field id="enabled" type="select" showInDefault="1" showInWebsite="0" showInStore="0">
                        <label>Is Module Enabled</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    </field>
                    <field id="promo_sku" type="text" showInDefault="1" showInWebsite="0" showInStore="0">
                        <label>Promo SKU</label>
                        <validate>required-entry</validate>
                        <depends>
                            <field id="enabled">1</field>
                        </depends>
                    </field>
                    <field id="for_sku" type="textarea" showInDefault="1" showInWebsite="0" showInStore="0">
                        <label>For SKU</label>
                        <validate>required-entry</validate>
                        <depends>
                            <field id="enabled">1</field>
                        </depends>
                    </field>
                </group>
            </section>
        </system>
</config>
